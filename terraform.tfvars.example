# Copy this file to terraform.tfvars and fill in your values.
# terraform.tfvars is git-ignored — never commit real credentials.

# ── Azure Credentials ─────────────────────────────────────────────────────────
subscription_id = "<YOUR_SUBSCRIPTION_ID>"
tenant_id       = "<YOUR_TENANT_ID>"
client_id       = "<YOUR_CLIENT_ID>"
client_secret   = "<YOUR_CLIENT_SECRET>"

# ── Cluster ───────────────────────────────────────────────────────────────────
location            = "eastus"
resource_group_name = "my-rg"
cluster_name        = "my-aks-cluster"
dns_prefix          = "my-aks"
node_count          = 2
vm_size             = "Standard_DC2s_v3"

# ── Ingress & DNS ─────────────────────────────────────────────────────────────
# All ingress hostnames will be <service>.<base_domain>
# After applying, point your DNS (or /etc/hosts) at the nginx LoadBalancer IP.
base_domain = "<YOUR_DOMAIN>"

# ── Grafana ───────────────────────────────────────────────────────────────────
grafana_admin_password = "<YOUR_GRAFANA_PASSWORD>"

# ── Let's Encrypt ─────────────────────────────────────────────────────────────
letsencrypt_email = "<YOUR_EMAIL>"
